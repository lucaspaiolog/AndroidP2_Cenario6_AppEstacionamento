<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema Base para o App (Dashboards) - MODO ESCURO -->
    <style name="Theme.AppEstacionamento" parent="Theme.Material3.DayNight">
        <!-- Cores Primárias (Verde) - Mantemos as mesmas, são claras -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item> <!-- Texto escuro no verde claro -->

        <!-- Cores Secundárias (Acento) -->
        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryVariant">@color/green_accent</item>
        <item name="colorOnSecondary">@color/white</item> <!-- Texto branco no FAB -->

        <!-- Cor de fundo do App (Modo Escuro) -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/text_primary_light</item> <!-- Texto claro no fundo escuro -->
        <item name="colorSurface">@color/dark_surface</item> <!-- Cor dos Cards (Modo Escuro) -->
        <item name="colorOnSurface">@color/text_primary_light</item> <!-- Texto claro nos cards escuros -->

        <!-- Cores de Status/Erro (Claras, pois o fundo é escuro) -->
        <item name="colorError">@color/status_occupied_red</item>
        <item name="colorOnError">@color/text_primary_dark</item> <!-- Texto escuro no vermelho claro -->

        <!-- Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema para Splash, Login, Register (Sem ActionBar) - MODO ESCURO -->
    <style name="Theme.AppEstacionamento.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores Primárias (Verde) -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary_dark</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>

        <!-- Cores Secundárias (Acento) -->
        <item name="colorSecondary">@color/green_accent</item>
        <item name="colorSecondaryVariant">@color/green_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Cor de fundo do App (Modo Escuro) -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/text_primary_light</item> <!-- Texto claro no fundo escuro -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/text_primary_light</item> <!-- Texto claro nos cards escuros -->

        <!-- Cores de Status/Erro -->
        <item name="colorError">@color/status_occupied_red</item>
        <item name="colorOnError">@color/text_primary_dark</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>